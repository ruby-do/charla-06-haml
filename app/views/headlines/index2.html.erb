<h1 style="padding-bottom:20px;">Sport headlines</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @headlines.each do |headline| %>
  <tr>
    <td style="padding: 30px; width:200px;"}><%= headline.title %></td>
    <td style="padding: 30px; width:500px;"><%= headline.content %></td>
    <td style="width: 60px;"><%= link_to 'Show', headline %> |</td>
    <td style="width: 60px;"><%= link_to 'Edit', edit_headline_path(headline) %> |</td>
    <td style="width: 60px;"><%= link_to 'Destroy', headline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Headline', new_headline_path, :class => "btn btn-info", :style => "float:right;" %>
