= form_for(@headline) do |f|
  - if @headline.errors.any?
    #error_explanation 
      %h2= pluralize(@headline.errors.count, "error")
      prohibited this headline from being saved:
  %ul
    - @headline.errors.full_messages.each do |msg|
      %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_field :content
  .actions
    = f.submit "Crear", :class => 'primary'